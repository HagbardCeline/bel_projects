               <FID>0</FID>
               <GID>4000</GID>
               <EVTNO>2</EVTNO>
               <SID>1</SID>
               <BPID>1</BPID>
            </id>
            <par>0xfeed0132</par>
            <tef>000</tef>
            <offs>040000000</offs>
         </msg>

         <msg>
             <!-- Msg A1E, EVT_PREP_BEAM_ON -->
