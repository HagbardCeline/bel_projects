               <SID>1</SID>
               <BPID>1</BPID>
            </id>
            <par>0xfeed0132</par>
            <tef>000</tef>
            <offs>050000000</offs>
         </msg>

         <msg>
             <!-- Msg A1F, EVT_BEAM_ON -->
