            </id>
            <par>0xfeed0132</par>
            <tef>000</tef>
            <offs>050001000</offs>
         </msg>

         <msg>
             <!-- Msg A1G, EVT_STOP_IQ -->
            <id>
               <FID>0</FID>
               <GID>4000</GID>
               <EVTNO>10</EVTNO>
               <SID>1</SID>
               <BPID>1</BPID>
            </id>
            <par>0xfeed0132</par>
            <tef>000</tef>
            <offs>059000000</offs>
         </msg>

         <msg>
             <!-- Msg A1H, EVT_BEAM_OFF -->
            <id>
               <FID>0</FID>
               <GID>4001</GID>
               <EVTNO>8</EVTNO>
               <SID>1</SID>
               <BPID>2</BPID>
            </id>
            <par>0xfeed0132</par>
            <tef>000</tef>
            <offs>059999999</offs>
         </msg>
      </chain>
      
       <chain>
         <!-- Loop back to Start -->
         <meta>
            <rep>10000</rep>
            <period>0</period>
            <branchpoint>yes</branchpoint>
            <signal>
               <destination>shared</destination>
               <cpu>1</cpu>
               <value>0x0000000000004713</value>
               <always>yes</always>
            </signal>
         </meta>
      </chain>
      
   </plan>
   
   <plan>
      <meta>
         <starttime>9999999</starttime>
         <lastjump>idle</lastjump>
      </meta> 
