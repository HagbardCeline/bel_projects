               <FID>0</FID>
               <GID>4000</GID>
               <EVTNO>32</EVTNO>
               <SID>1</SID>
               <BPID>1</BPID>
            </id>
            <par>0xfeedd0001</par>
            <tef>000</tef>
            <offs>001000000</offs>
         </msg>

	      <msg>
             <!-- Msg A1B, EVT_CYCLE_START Alkor (linac) -->
            <id>
               <FID>0</FID>
               <GID>4001</GID>
               <EVTNO>32</EVTNO>
               <SID>1</SID>
               <BPID>1</BPID>
            </id>
            <par>0xfeedd0001</par>
            <tef>000</tef>
            <offs>001000000</offs>
         </msg>

         <msg>
             <!-- Msg A1C, EVT_IQ_HEATING -->
            <id>
               <FID>0</FID>
               <GID>4000</GID>
               <EVTNO>3</EVTNO>
               <SID>1</SID>
               <BPID>1</BPID>
            </id>
            <par>0xfeed0132</par>
            <tef>000</tef>
            <offs>010000000</offs>
